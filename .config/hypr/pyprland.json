{
    "pyprland":{
        "plugins": ["scratchpads", "expose"]
    },

"scratchpads":{
        "kitty":{
            "command": "kitty --class scratchpad",
            "animation": "fromTop",
            "margin": 50,
            "unfocus": "hide"
        },
        "lf":{
            "command": "kitty --class scratchpad -e lf",
            "animation": "fromTop",
            "margin": 50
        },
        "spotify":{
            "command": "spotify",
            "animation": "fromTop",
            "margin": 50
        }
    }
}
